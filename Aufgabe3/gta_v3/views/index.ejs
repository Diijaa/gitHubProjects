<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">
<head>
        <!-- Leaflet CSS and JavaScript (in this order) -->
        <link rel='stylesheet' href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css'
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""/>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header class="header row">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location">
        <h1 class="header__title">GeoTagApp</h1>
        <nav class="header__navigation">
        <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>

    <main class="main row">
        <section class="main__tagging tagging">
            <h2>Tagging</h2>

            <!-- ############### VS1Lab 1a Form 1 Start -->
            <form id="tag-form" action="/tagging" method="post">

                <!-- ... your code here ... -->
             <fieldset id= "tagging_fildset">   
                <legend id="tagging_legend" style="padding: 8px;">Add a new GeoTag</legend>
                <label for="tagging_latitude_line" style="margin-left: 10px;">Latitude:</label>
                <input type="text" id="tagging_latitude_line" name="Latitude:" placeholder="49.01379" readonly >
                <label for="tagging_longitude_line" style="margin-left: 10px;">Longitude:</label>
                <input type="text" id="tagging_longitude_line" name="Longitude:" placeholder="8.390071" readonly >
                <label for="tagging_name_line" style="margin-left: 10px;">Name:</label>
                <input type="text" pattern="[a-zA-Z]*" id="tagging_name_line" name="Name:" placeholder="e.g. Central Berlin " maxlength="10" required>
                <label for="tagging_hashtag_line" style="margin-left: 10px;">Hashtag:</label>
                <input type="text" pattern="#.[a-zA-Z]*" title="Input must begin with #" id="tagging_hashtag_line" name="Hashtag:" placeholder="e.g. #ber" maxlength="11">
                <input type="submit" id="submit_addtag_button"  value="Add Tag">
                
             </fieldset> 

            </form>
            <!-- ############### VS1Lab 1a Form 1 End -->

        </section>

        <section class="main__discovery discovery col-12">
            <h2 class="discovery__title">Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="discovery__search col-10" id="discoveryFilterForm" action="/discovery" method="post">

                <!-- ... your code here ... -->
                <fieldset>
                    <legend id="discovery_legend" style="padding: 8px;">Search</legend>
                    <label for="discovery_input_line" style="margin-left: 10px;">Search term or keywords:</label><br>
                    <input type="text" id="discovery_input_line" placeholder="e.g. Berlin"><br>
                    <input type="submit" id="submit_search_button" value="Search">
                    <input type="hidden" name="Latitude" id="discovery_latitude">
                    <input type="hidden" name="Longitude" id="discovery_longitude">
                </fieldset>
                

            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->

            <div class="discovery__wrapper">
                <div class="discovery__taglist">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                    </ul>
                </div>

                <div id="map"></div>
            </div>
        </section>

    </main>

    <footer class="footer">
        <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>
    <!-- Load JavaScripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="./javascripts/geotagging.js"></script>
    <script src="./javascripts/location-helper.js"></script>
    <script src="./javascripts/map-manager.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
     integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
     crossorigin=""></script>
</body>

</html>